{
  "name": "awaitajax",
  "version": "0.9.1",
  "description": "Turns Node http.request into single-callback form, for use with await/defer",
  "main": "lib/awaitajax.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --bail --reporter mocha-lcov-reporter --require blanket --require iced-coffee-script/register test/**/*.iced | ./node_modules/coveralls/bin/coveralls.js",
    "test-local": "./node_modules/.bin/mocha --bail --require blanket --require iced-coffee-script/register test/**/*.iced",
    "html-cov": "./node_modules/.bin/mocha --bail --reporter html-cov --require blanket --require iced-coffee-script/register test/**/*.iced >coverage.html",
    "lcov": "./node_modules/.bin/mocha --bail --reporter mocha-lcov-reporter --require blanket --require iced-coffee-script/register test/**/*.iced >lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/doublerebel/node-awaitajax"
  },
  "keywords": [
    "iced",
    "coffeescript",
    "await",
    "defer",
    "ajax",
    "http",
    "xhr",
    "queue"
  ],
  "author": "doublerebel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doublerebel/node-awaitajax/issues"
  },
  "homepage": "https://github.com/doublerebel/node-awaitajax",
  "dependencies": {
    "najax": "^0.4.0",
    "iced-runtime": "doublerebel/iced-runtime"
  },
  "devDependencies": {
    "blanket": "^1.2.2",
    "chai": "^3.5.0",
    "coveralls": "^2.11.8",
    "iced-coffee-script": "^108.0.9",
    "mocha": "^3.1.0",
    "mocha-lcov-reporter": "1.2.0",
    "nock": "^7.2.2"
  },
  "config": {
    "blanket": {
      "pattern": "lib",
      "data-cover-never": "node_modules"
    }
  }
}
